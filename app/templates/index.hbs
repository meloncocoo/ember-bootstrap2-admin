<h3>控件示例</h3>

<div class="row-fluid">
    <div class="span6">
        <div class="widget green">
            <div class="widget-title"><h4>表单提交</h4></div>
            <div class="widget-body">
                {{#em-form model=model class="form-horizontal"}}
                    {{bs-form-control-group label="用户名:" property="userName"}}
                    {{bs-form-control-group label="密码:" property="password"}}
                {{/em-form}}
            </div>
        </div>
    </div>
</div>

<div class="row-fluid">
    <div class="span6">
        <div class="widget red">
            <div class="widget-title"><h4>分页控件</h4></div>
            <div class="widget-body">
                {{em-pagination params=queryParams class="text-center" page=1 size=10 count=100 displayCount=5}}
            </div>
        </div>
    </div>
</div>
